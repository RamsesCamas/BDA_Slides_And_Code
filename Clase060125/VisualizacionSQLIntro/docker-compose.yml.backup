services:
  db:
    image: postgres:16-alpine
    container_name: sql-lab-db
    environment:
      POSTGRES_DB: bda_class
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./backend/sql_scripts/schema.sql:/docker-entrypoint-initdb.d/01_schema.sql
      - ./backend/sql_scripts/seed.sql:/docker-entrypoint-initdb.d/02_seed.sql
    networks:
      - sql-lab-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U postgres -d bda_class"]
      interval: 10s
      timeout: 5s
      retries: 5

  backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    container_name: sql-lab-backend
    environment:
      DB_HOST: db
      DB_PORT: 5432
      DB_NAME: bda_class
      DB_USER: postgres
      DB_PASSWORD: postgres
      LAB_PASSWORD: lab123
      GROUPS: "20"
      TEAMS_PER_GROUP: "2"
    volumes:
      - ./backend:/app
      - ./backend/queries.sql:/app/queries.sql
    depends_on:
      db:
        condition: service_healthy
    networks:
      - sql-lab-network
    ports:
      - "8000:8000"

  frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    container_name: sql-lab-frontend
    environment:
      VITE_API_URL: http://backend:8000
    depends_on:
      - backend
    networks:
      - sql-lab-network
    ports:
      - "3000:3000"

volumes:
  postgres_data:
    driver: local

networks:
  sql-lab-network:
    driver: bridge
